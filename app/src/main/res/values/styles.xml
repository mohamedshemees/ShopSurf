<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="OvalImageShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="CategoryImageShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <!-- Roboto Medium Text Style -->
    <style name="Text_Roboto_Medium">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">#000000</item>
    </style>
    <style name="Text.Small" parent="Text_Roboto_Medium">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Text.Medium" parent="Text_Roboto_Medium">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Large" parent="Text_Roboto_Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyOutlinedTextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="MyTextInputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>