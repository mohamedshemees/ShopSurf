<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/padding_medium"
    android:elevation="@dimen/padding_small"
    android:layout_margin="@dimen/margin_small"
    android:foreground="?attr/selectableItemBackground"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@id/product_thumbnail"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/mosalah"
            app:shapeAppearanceOverlay="@style/OvalImageShape"
            android:layout_marginTop="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_medium"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_title"
                android:textColor="@color/black"
                android:textSize="@dimen/text_medium_size"
                />
            <TextView
                android:id="@+id/product_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_description_goes_here"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="@dimen/text_small_size"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_medium"
                >
                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="$21234"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_primary"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_decrease"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_margin="@dimen/margin_small"
                    android:elevation="4dp"
                    app:cardCornerRadius="4dp"
                    android:foreground="?attr/selectableItemBackground"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:layout_gravity="center"
                        android:paddingHorizontal="8dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_large_size"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/product_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"

                    android:layout_marginHorizontal="@dimen/margin_medium"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/btn_increase"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:padding="12dp"
                    android:elevation="4dp"
                    app:cardCornerRadius="4dp"
                    android:foreground="?attr/selectableItemBackground"

                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:layout_gravity="center"
                        android:paddingHorizontal="8dp"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_large_size"
                        />
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/btn_remove"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/delete"
                    android:foreground="?attr/selectableItemBackground"
                    android:layout_marginHorizontal="@dimen/margin_small"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
